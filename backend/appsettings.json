{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=mockmate.db"
  },
  "JwtSettings": {
    "SecretKey": "YOUR-PRODUCTION-SECRET-KEY-SHOULD-BE-DIFFERENT",
    "Issuer": "MockMate.Api",
    "Audience": "MockMate.Client",
    "ExpiryInMinutes": 60,
    "RefreshTokenExpiryInDays": 7
  },
  "AllowedHosts": "*"
}
